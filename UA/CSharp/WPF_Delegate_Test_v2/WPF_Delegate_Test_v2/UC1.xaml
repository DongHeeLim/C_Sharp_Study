<UserControl x:Class="WPF_Delegate_Test_v2.UC1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Delegate_Test_v2"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="UC1_txt" Text="{Binding TEXT_NAME, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="0" Background="Beige"/>
        <Button Grid.Column="1" Click="Button_Click"/>
    </Grid>
</UserControl>
