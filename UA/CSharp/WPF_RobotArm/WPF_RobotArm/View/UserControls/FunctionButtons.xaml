<UserControl x:Class="WPF_RobotArm.View.UserControls.FunctionButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_RobotArm.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Grid.Column="0" ShowGridLines="True" Background="Beige">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Click="btn_OptiTrack_Click">
            OptiTrack
        </Button>
        <Button Grid.Row="1" Click="btn_OptiTrack_Click">
            Haptic
        </Button>
        <Button Grid.Row="2" Click="btn_OptiTrack_Click">
            Voice
        </Button>
        <Button Grid.Row="3" Click="btn_OptiTrack_Click">
            Streaming
        </Button>
        <Button Grid.Row="4" Click="btn_OptiTrack_Click">
            Teaching
        </Button>
        <Button Grid.Row="5" Click="btn_OptiTrack_Click">
            Drilling
        </Button>
    
    </Grid>
    
    
</UserControl>
